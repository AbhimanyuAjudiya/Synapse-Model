# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/synapsemodel
MONGODB_OPTIONS=retryWrites=true&w=majority

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Sui Network Configuration
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# Smart Contract Addresses (from deployment)
SUI_PACKAGE_ID=0x...
SUI_ENCLAVE_CONFIG_ID=0x...
SUI_JOB_REGISTRY_ID=0x...
SUI_ENCLAVE_ID=0x...

# TEE Server Configuration
TEE_SERVER_URL=http://localhost:3000
TEE_SERVER_TIMEOUT=30000

# Job Processing
JOB_QUEUE_NAME=synapsemodel-jobs
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000
JOB_TIMEOUT=60000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-for-admin-endpoints

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
